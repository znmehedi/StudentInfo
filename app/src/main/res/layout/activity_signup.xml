<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/imgV1_signup"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        android:src="@drawable/high_school_students"
        android:transitionName="logo_anim"
        />
    <TextView
        android:id="@+id/tv1_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_marginTop="-30dp"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/nyctaghina_bold"
        android:transitionName="text_anim"

        />
    <TextView
        android:id="@+id/tv2_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up to start your new journey"
        android:textColor="@color/black"
        android:fontFamily="@font/titillium_web_light"
        android:textSize="20sp"
        android:transitionName="text_anim2"
        />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:id="@+id/ll1_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fullName_txt_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Full Name"
                    android:textColorHint="@color/black"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fullName_edit_txt_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:textCursorDrawable="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/idNumber_txt_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="ID Number"
                    android:textColorHint="@color/black"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:transitionName="usr_name_anim"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/idNumber_edit_txt_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:inputType="text"
                        android:textCursorDrawable="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/email_txt_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="E-mail"
                    android:textColorHint="@color/black"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/email_edit_txt_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:inputType="textEmailAddress"
                        android:textCursorDrawable="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_txt_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Phone"
                    android:textColorHint="@color/black"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_edit_txt_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:inputType="phone"
                        android:textCursorDrawable="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_txt_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:hint="Password"
                    android:textColorHint="@color/black"
                    app:hintTextColor="@color/black"
                    app:boxStrokeColor="@color/black"
                    app:passwordToggleEnabled="true"
                    app:errorIconDrawable="@null"
                    app:passwordToggleTint="@color/black"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:transitionName="pass_anim"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_edit_txt_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:inputType="textPassword"
                        android:textCursorDrawable="@color/black"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/btn1_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GO"
                    android:textSize="20sp"
                    android:fontFamily="@font/titillium_web_light"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/black"
                    android:transitionName="sign_up_btn_anim"

                    />
                <Button
                    android:id="@+id/btn2_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already registered! Sign In"
                    android:textSize="20sp"
                    android:fontFamily="@font/titillium_web_light"
                    android:textColor="@color/black"
                    android:background="@color/transparent"

                    android:transitionName="login_btn_anim"
                    />
            </LinearLayout>
        </ScrollView>


</LinearLayout>